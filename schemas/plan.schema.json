{ "$schema": "https://json-schema.org/draft/2020-12/schema", "title": "PostHogContributionPlan",
  "description": "Typed plan for a PostHog contribution with HITL gates and minimal diffs.",
  "type": "object",
  "required": ["repo","issue","change_type","target_paths","diff_plan","tests","hitl_gates","risk","acceptance_criteria"],
  "properties": {
    "repo": { "type": "string" },
    "issue": {
      "type": "object", "required": ["url","number","title","labels"],
      "properties": {
        "url": { "type": "string", "format": "uri" },
        "number": { "type": "integer" },
        "title": { "type": "string" },
        "labels": { "type": "array", "items": { "type": "string" } },
        "owner": { "type": "string" },
        "context_links": { "type": "array", "items": { "type": "string", "format": "uri" } }
      }
    },
    "scope": {
      "type": "object",
      "properties": {
        "in_scope": { "type": "array", "items": { "type": "string" } },
        "out_of_scope": { "type": "array", "items": { "type": "string" } }
      }
    },
    "change_type": {
      "type": "string",
      "enum": ["frontend-ui","frontend-kea","backend-django","plugin-server","docs-only","misc"]
    },
    "target_paths": { "type": "array", "items": { "type": "string" } },
    "diff_plan": {
      "type": "array",
      "items": {
        "type": "object", "required": ["file","op","description"],
        "properties": {
          "file": { "type": "string" },
          "op": { "type": "string", "enum": ["add","edit","delete","move"] },
          "description": { "type": "string" },
          "functions_affected": { "type": "array", "items": { "type": "string" } },
          "insert_after": { "type": "string" },
          "delete_lines": { "type": "string" },
          "notes": { "type": "string" }
        }
      }
    },
    "tests": {
      "type": "object", "required": ["commands"],
      "properties": {
        "unit": { "type": "array", "items": { "type": "string" } },
        "e2e": { "type": "array", "items": { "type": "string" } },
        "manual": { "type": "array", "items": { "type": "string" } },
        "commands": { "type": "array", "items": { "type": "string" } }
      }
    },
    "docs_impacts": { "type": "array", "items": { "type": "string" } },
    "risk": { "type": "string", "enum": ["low","medium","high"] },
    "breaking_changes": { "type": "boolean", "default": false },
    "clickhouse_hogql_touchpoints": { "type": "array", "items": { "type": "string" } },
    "dependencies": { "type": "array", "items": { "type": "string" } },
    "approvals_required": { "type": "array", "items": { "type": "string" } },
    "hitl_gates": {
      "type": "array",
      "items": {
        "type": "object", "required": ["name","reason"],
        "properties": {
          "name": { "type": "string", "enum": ["PM-approve-story","SE-approve-rfc","Open-PR"] },
          "reason": { "type": "string" },
          "on_fail": { "type": "string", "enum": ["abort","revise","warn"] }
        }
      }
    },
    "acceptance_criteria": { "type": "array", "items": { "type": "string" } },
    "runbook": {
      "type": "object",
      "properties": {
        "setup": { "type": "array", "items": { "type": "string" } },
        "run": { "type": "array", "items": { "type": "string" } },
        "rollback": { "type": "array", "items": { "type": "string" } }
      }
    },
    "telemetry": {
      "type": "object",
      "properties": {
        "traces": { "type": "array", "items": { "type": "string" } },
        "metrics": { "type": "array", "items": { "type": "string" } }
      }
    },
    "grounding_links": { "type": "array", "items": { "type": "string", "format": "uri" } },
    "pr": {
      "type": "object",
      "properties": {
        "branch": { "type": "string" },
        "title": { "type": "string" },
        "body_sections": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
